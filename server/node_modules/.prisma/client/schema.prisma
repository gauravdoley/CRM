// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // A user can be assigned to many leads
  assignedLeads Lead[] @relation("AssignedTo")
  // A user can create many leads
  createdLeads  Lead[] @relation("CreatedBy")
}

// Lead/Opportunity model
model Lead {
  id              String   @id @default(cuid())
  title           String
  expectedRevenue Float?
  probability     Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // A lead belongs to a specific stage in the pipeline
  stageId       String
  pipelineStage PipelineStage @relation(fields: [stageId], references: [id])

  // A lead must be assigned to a specific user
  assignedToId String
  assignedTo   User   @relation("AssignedTo", fields: [assignedToId], references: [id])

  // A lead is created by a specific user
  createdById String
  createdBy   User   @relation("CreatedBy", fields: [createdById], references: [id])

  // A lead is associated with a customer
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])
}

// PipelineStage model defines the columns in your Kanban board
model PipelineStage {
  id        String   @id @default(cuid())
  name      String   @unique
  order     Int
  leads     Lead[]
  createdAt DateTime @default(now())
}

// Customer model
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  leads Lead[]
}
